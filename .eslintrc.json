{
    "parser": "babel-eslint",
    "plugins": [ "react" ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "forOf": true,
      "generators": true,
      "modules": true,
      "spread": true,
      "templateStrings": true,
      "jsx": true
    },
    "rules": {
      "object-curly-spacing": [1, "always"],
      "array-bracket-spacing": [1, "always"],
      "block-spacing": [1, "always"],
      "no-cond-assign": [1, "always"],
      "comma-dangle": [1, "never"],
      "comma-spacing": [1, { "before": false, "after": true }],
      "space-before-function-paren": [1, "never"],
      "space-in-parens": [1, "never"],
      "key-spacing": [1],
      "comma-style": [1, "first", {"exceptions": { "ArrayExpression": true, "ObjectExpression": true }}],
      "arrow-parens": [0],
      "arrow-spacing": [1],
      "func-call-spacing": [1],
      "indent": [1, 2],
      "jsx-quotes": [1],
      "semi-spacing": [1],
      "semi": [0],
      "space-before-blocks": [1],
      "quotes": [1, "single"],
      "no-trailing-spaces": [1],
      "no-whitespace-before-property": [1],
      "new-parens": [1],
      "keyword-spacing": [1],
      "template-curly-spacing": [1],
      "linebreak-style": [1],
      "computed-property-spacing": [1],
      "no-var": [1],
      "no-console": [1],
      "no-debugger": [1],
      "no-alert": [1],
      "no-dupe-keys": [1],
      "no-empty": [1],
      "no-inner-declarations": [1],
      "no-unreachable": [1],
      "no-else-return": [1],
      "no-empty-function": [1],
      "no-eq-null": [1],
      "no-extra-bind": [1],
      "no-floating-decimal": [1],
      "no-invalid-this": [1],
      "no-multi-spaces": [1],
      "class-methods-use-this": [1],
      "eqeqeq": [1]
    }
}
